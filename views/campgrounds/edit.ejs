<%- include('../partials/header') %>
<div class="container">
  <h1>Edit <%=campgT.name%></h1><br>
  <div class="row">
	<form action="/campgrounds/<%=campgT._id%>?_method=PUT" method="POST">
	   <div class="form-group">
	     <input type="text" class="form-control" name="campground[name]"placeholder="name" value="<%=campgT.name%>">
	   </div>
	   <div class="form-group">
	     <input type="text" class="form-control" name="campground[image]"placeholder="image url" value="<%=campgT.image%>">
	   </div>
	   <div class="form-group">
         <input type="text" class="form-control" placeholder="put in some description"         name="campground[description]" value="<%=campgT.description%>">
	   </div>
	   <div class="form-group">
	     <input type="number" class="form-control" placeholder="price" name="campground[price]" value="<%=campgT.price%>" min="0.01" step="0.01">
	   </div>
	   <div class="form-group">
	     <button class="btn btn-primary btn-lg btn-block"> Submit! </button>
	   </div>
	   
	</form>
  </div>
  <a href="/campgrounds/<%= campgT._id%>">Go back!</a>
</div>  
<%- include('../partials/footer') %>
