<%- include('../partials/header') %>
<div class="container">
  <h1 >Add a new Camp Ground </h1><br>
  <div class="row">
	<form action="/campgrounds" method="POST">
	   <div class="form-group">
	     <input type="text" class="form-control" placeholder="name" name="name">
	   </div>
	   <div class="form-group">
	     <input type="text" class="form-control" placeholder="image url" name="image">
	   </div>
	   <div class="form-group">
	     <input type="text" class="form-control" placeholder="put in some description" name="description">
	   </div>
	   <div class="form-group">
	     <input type="number" class="form-control" placeholder="price" name="price" min="0.01" step="0.01">
	   </div>
	   <div class="form-group">
	     <button class="btn btn-primary btn-lg btn-block"> Submit! </button>
	   </div>
	   
	</form>
  </div>
  <a href="/campgrounds">Go back!</a>
</div>  
<%- include('../partials/footer') %>